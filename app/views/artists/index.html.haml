.six.columns.centered
  %h1
    Artists
    =link_to("Add Artist",new_artist_path,:class=>'button')
  %table
    -@artists.each do |artist|
      %tr
        %td
          =link_to(artist.name,artist)
        %td
          =image_tag(artist.image)
        -if is_admin
          %td
            =link_to("Edit", edit_artist_path(artist.id), :class=>'button')
          %td
            =link_to("Delete", artist,:method=>"delete", :class=>'button alert')
