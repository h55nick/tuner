.row
  .six.columns.centered
    %h2
      All Songs
      -if is_admin
        =link_to("New Song",new_song_path,:class=>'button')
    %table
      -@songs.each do |song|
        %tr
          -if is_admin
            %td
              =link_to("Edit",edit_song_path(song.id),:class=>'button')
            %td
              =link_to("Delete", song , :method =>'delete', :confirm => 'Are you sure?',:class=>'button alert')
          %td
            -song.name ="Blank" if song.name.nil?
            =link_to(song.name,song)
          %td
            -if !song.artist.nil?
              =link_to(song.artist.name,song.artist)
          %td
            != sbutton(song)
