.row
  .six.columns.centered
    %h2
      Albums
      =link_to("New Album",new_album_path,:class=>'button') if !@auth.nil? && @auth.is_admin
      %table
        -@albums.each do |album|
          %tr
            %td
              =link_to("Edit",edit_album_path(album.id),:class=>'button') if !@auth.nil? && @auth.is_admin
            %td
              =link_to("Delete", album , :method =>'delete', :confirm => 'Are you sure?',:class=>'button alert') if !@auth.nil? && @auth.is_admin
            %td
              =album.name
            %td
              =image_tag(album.image)