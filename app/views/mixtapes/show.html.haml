.nine.columns.centered
  %h2
    =@mixtape.name
  -if @mixtape.name != "All Songs"
    %h4
      =button_to("Delete", @mixtape, :method =>'delete', :confirm => 'Are you sure?' ,:class=>'alert button radius ' )
  .edit
    %h4
      =link_to("Edit", edit_mixtape_path(@mixtape.id),:class=>'button')
  .addsongs
    =link_to("Add Songs",songs_path,:class=>'button' )
  %hr
    %ul
      -@mixtape.songs.each do |song|
        %li
          -if !song.name.nil?
            =link_to(song.name,song)
          -if !song.artist.nil?
            by
            =link_to(song.artist.name,song.artist)